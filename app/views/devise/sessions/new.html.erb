
<div class="bg-gray-100 min-h-screen flex items-center justify-center font-geist">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-semibold mb-6 text-center text-gray-800">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <div class="field">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-150 ease-in-out font-medium" %>
      </div>
    <% end %>

    <div class="mt-6 text-center space-y-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>